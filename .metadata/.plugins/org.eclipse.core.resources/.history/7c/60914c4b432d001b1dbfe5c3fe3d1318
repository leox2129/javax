			new Object[][] {
			},
			new String[] {
				"Id", "Nombre", "Apellido", "Edad"
			}
		));
		table.getColumnModel().getColumn(0).setPreferredWidth(50);
		table.getColumnModel().getColumn(0).setMinWidth(50);
